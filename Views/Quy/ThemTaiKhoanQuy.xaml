<UserControl x:Class="QuanLyBanHang.Views.Quy.ThemTaiKhoanQuy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyBanHang.Views.Quy"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <!-- Khung viền trang trí -->
        <Border Background="#FFFDE4EC" BorderBrush="#FFFFC0CB" BorderThickness="3" CornerRadius="15">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="Thêm Tài Khoản" Grid.Row="0" Grid.ColumnSpan="2" 
                           FontSize="20" FontWeight="Bold" Foreground="#FFD700"
                           HorizontalAlignment="Center" Margin="5"/>

                <!-- Mã tài khoản -->
                <TextBlock Text="Mã tài khoản:" Grid.Row="1" Grid.Column="0" Margin="5" FontWeight="Bold"/>
                <TextBox Name="txtMaTaiKhoan" Grid.Row="1" Grid.Column="1" Margin="5" Width="220" Background="#FFFFF0F5"/>

                <!-- Tên tài khoản -->
                <TextBlock Text="Tên tài khoản:" Grid.Row="2" Grid.Column="0" Margin="5" FontWeight="Bold"/>
                <TextBox Name="txtTenTaiKhoan" Grid.Row="2" Grid.Column="1" Margin="5" Width="220" Background="#FFFFF0F5"/>

                <!-- Loại tài khoản -->
                <TextBlock Text="Loại tài khoản:" Grid.Row="3" Grid.Column="0" Margin="5" FontWeight="Bold"/>
                <TextBox Name="txtLoaiTaiKhoan" Grid.Row="3" Grid.Column="1" Margin="5" Width="220" Background="#FFFFF0F5"/>

                <!-- Số dư hiện tại -->
                <TextBlock Text="Số dư hiện tại:" Grid.Row="4" Grid.Column="0" Margin="5" FontWeight="Bold"/>
                <TextBox Name="txtSoDu" Grid.Row="4" Grid.Column="1" Margin="5" Width="220" Background="#FFFFF0F5"/>

                <!-- Trạng thái -->
                <TextBlock Text="Trạng thái:" Grid.Row="5" Grid.Column="0" Margin="5" FontWeight="Bold"/>
                <ComboBox Name="cmbTrangThai" Grid.Row="5" Grid.Column="1" Margin="5" Width="220" Background="#FFFFF0F5">
                    <ComboBoxItem Content="Hoạt động"/>
                    <ComboBoxItem Content="Đóng"/>
                </ComboBox>

                <!-- Nút Lưu và Hủy -->
                <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="15">
                    <Button Name="btnLuu" Content="Lưu" Width="90" Margin="5" Background="#FFFF69B4" Foreground="White" FontWeight="Bold"/>
                    <Button Name="btnHuy" Content="Hủy" Width="90" Margin="5" Background="#FFFFB6C1" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
